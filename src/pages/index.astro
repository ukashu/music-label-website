---
import Layout from '../layouts/Layout.astro';
import Desktop from './Desktop';
import cubelogo from '../videos/cubelogo.mp4';
import './crt.css'
---

<Layout title="NIGHTMODE">
	<main class="page">
		<div class="crt"></div>
		<video id='background-video' autoplay loop muted>
			<source src={cubelogo} type='video/mp4' />
		</video>
		<section class="screen">
			<Desktop client:only/>
		</section>
	</main>
</Layout>

<style>
	.page {
		margin: 0;
		padding: 0;
		width: 100vw;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
		display: flex;
		justify-content: center;
		align-items: center;
	}
	.screen {
		height:100vh;
		width: 100vw;
		background: transparent;
		/* background-image: url(../images/nightmode.jpg);
		background-repeat: no-repeat;
		background-attachment: fixed;
  	background-position: center; */
	}

	#background-video {
		height: 50%;
		width: 50%;
		float: left;
		padding: none;
		margin: auto auto;
		position: fixed; /* optional depending on what you want to do in your app */
	}
	
	.enableBlur>* {
		filter: blur(1px);
	}

	.disableBlur {
		filter: blur(0);
	}
</style>
